@model IEnumerable<Store.Models.Product>

@{
    ViewData["Title"] = "Products";
}


@{
    await Html.RenderPartialAsync("Partial/_nav_product");
}

<br />


<button type="button" class="btn btn-dark"
        onclick="location.href = '@Url.Action("AddProduct", "Administration")'">
    Add new product
</button>
<br />
<br />


<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Photo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sex)
            </th>
            <th>
                Warehouse
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img src="~/images/@item.PhotoPath" alt="" height="30" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sex.Name)
            </td>
            <td>
                    @Html.ActionLink("Stock", "Stock", new { id = item.Id })
            </td>
            <td>
                    @Html.ActionLink("EditProduct", "EditProduct", new { id = item.Id })
            </td>
            <td>
                    @Html.ActionLink("DeleteProduct", "DeleteProduct", new { id = item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>
