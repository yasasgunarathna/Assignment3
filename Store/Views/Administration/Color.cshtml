@model IEnumerable<Store.Models.Color>

@{
    ViewData["Title"] = "Color";
}
@{
    await Html.RenderPartialAsync("Partial/_nav_product");
}
<br />
<button type="button" class="btn btn-dark"
        onclick="location.href = '@Url.Action("AddColor", "Administration")'">
    Add new color
</button>
<br />
<br />


<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit Color", "EditColor", new { id = item.Id })
                </td>
                <td>
                    @Html.ActionLink("Delete Color", "DeleteColor", new { id = item.Id })
                </td>

            </tr>
        }
    </tbody>
</table>
