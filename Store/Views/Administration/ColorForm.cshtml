@model Store.Models.Color

@{
    ViewData["Title"] = "Color Form";
}

@{
    await Html.RenderPartialAsync("Partial/_nav_product");
}
<hr />
<br />

@using (Html.BeginForm("SaveColor", "Administration"))
{
    @Html.AntiForgeryToken()

    <div class="text-danger">@Html.ValidationSummary()</div>
    <div class="form-row">
        <div class="form-group col-md-3">
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </div>

    <br />
    @if (Model.Name == null)
    {
        <button type="submit" class="btn btn-primary">Add New Color</button>
    }
    else
    {
        @Html.HiddenFor(x => x.Id)
        <button type="submit" class="btn btn-primary">Save</button>
    }
}
<br />

<button type="button" class="btn btn-dark"
        onclick="location.href = '@Url.Action("Color", "Administration")'">
    Back to list
</button>
