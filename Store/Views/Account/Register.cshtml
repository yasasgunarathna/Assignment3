@model Store.ViewModels.RegisterViewModel


@{
    ViewData["Title"] = "Join Us!";
}

<head>

    <link type="text/css" rel="stylesheet" href="~/css/Account/register.css" />

</head>


<h1 class="display-4">Join Us!</h1>
<hr />
<br />




@using (Html.BeginForm("Register", "Account"))
{
    @Html.AntiForgeryToken()

    <div class="text-danger">@Html.ValidationSummary()</div>


    <div class="form-row form-row">
        <div class="col-md-3">
            @Html.LabelFor(c => c.FirstName)
            @Html.TextBoxFor(c => c.FirstName, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.FirstName)
        </div>

        <div class="col-md-1">
        </div>


        <div class="col-md-3">
            @Html.LabelFor(c => c.LastName)
            @Html.TextBoxFor(c => c.LastName, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.LastName)

        </div>
    </div>

    <div class="form-group form-row">
        <div class="col-md-3">
            @Html.LabelFor(c => c.UserName)
            @Html.TextBoxFor(c => c.UserName, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.UserName)
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-3">
            @Html.LabelFor(c => c.Email)
            @Html.TextBoxFor(c => c.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.Email)
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-3">
            @Html.LabelFor(c => c.Phone)
            @Html.TextBoxFor(c => c.Phone, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.Phone)
        </div>
    </div>



    <div class="form-group form-row">
        <div class="col-md-3">
            @Html.LabelFor(c => c.Password)
            @Html.PasswordFor(c => c.Password, new { @class = "form-control text-danger" })
            @Html.ValidationMessageFor(u => u.Password)
        </div>

        <div class="col-md-1"></div>

        <div class="col-md-3">
            @Html.LabelFor(c => c.ConfirmPassword)
            @Html.PasswordFor(c => c.ConfirmPassword, new { @class = "form-control text-danger" })
            @Html.ValidationMessageFor(u => u.ConfirmPassword)
        </div>
    </div>

    <div class="form-group form-row" style="margin:20px 0px;">
            <span>Address Details>
    </div>

    <div class="form-group form-row">
        <div class="col-md-3">
            @Html.LabelFor(u => u.Address1)
            @Html.TextBoxFor(c => c.Address1, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.Address1)
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-3">
            @Html.LabelFor(u => u.Address2)
            @Html.TextBoxFor(c => c.Address2, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.Address2)
        </div>
    </div>

    <div class="form-group form-row">
        <div class="col-md-3">
            @Html.LabelFor(u => u.PostCode)
            @Html.TextBoxFor(c => c.PostCode, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.PostCode)
        </div>

        <div class="col-md-1"></div>

        <div class="col-md-3">
            @Html.LabelFor(u => u.City)
            @Html.TextBoxFor(c => c.City, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.City)
        </div>
    </div>
    <div class="form-group form-row">
        <div class="col-md-3">
            @Html.LabelFor(u => u.GenderId)
                @Html.DropDownListFor(u => u.GenderId, new SelectList(Model.Genders, "Id", "Name"), "Select gender", new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.GenderId)
        </div>

    </div>

    <br />
    <button type="submit" class="btn btn-primary"> Join</button>

}


<style>



    .form-row {
        margin-bottom: 10px;
    }
</style>
