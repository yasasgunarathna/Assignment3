@model IEnumerable<Store.Models.Brand>

@{
    ViewData["Title"] = "Index";
}


@{
    await Html.RenderPartialAsync("Partial/_nav_product");
}

<br />

<button type="button" class="btn btn-dark"
        onclick="location.href = '@Url.Action("AddBrand", "Administration")'">
    Add new brand
</button>
<br />
<br />


<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Logo
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img src="~/images/@item.PhotoPath" alt="" height="30" />
            </td>
            <td>
                @Html.ActionLink("Edit", "EditBrand", new { id = item.Id })
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteBrand", new { id = item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>
<br />
